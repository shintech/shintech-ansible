server {
  listen 443;
  server_name *.{{ domain }};
  server_tokens off;

  include ssl.conf;
  
  ssl_certificate           {{ ssl_crt }};
  ssl_certificate_key       {{ ssl_key }};
  
  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_pass http://{{ domain }}:8000;
  }  
  
}


